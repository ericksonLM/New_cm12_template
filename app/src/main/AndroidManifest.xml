<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vivek.template" >

    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.REBOOT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".splash"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter >

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>


            </activity>

  <activity android:name=".ViewPagerActivity"/>
        <activity android:name=".about"
            android:label="About Developer"
            android:theme="@style/about_theme"/>


    </application>
    <meta-data android:name="org.cyanogenmod.theme.name" android:value="Neat.cm12"/>
    <meta-data android:name="org.cyanogenmod.theme.author" android:value="Vivek_Neel" />


</manifest>
